<% if @review.errors.any? %>
  <h3 style="color:#FF0000">Your review failed for the following <%= pluralize(@review.errors.count, "reason") %>:</h3>
  <ul>
  <% @review.errors.full_messages.each do |error_message| %>
    <li style="color:#FF0000"><%= error_message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @review do |f| %>
  <%= f.label "Item" %>
  <%= f.collection_select :item_id, Item.all, :id, :title, selected: @item_id %><br>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Description" %>
  <%= f.text_area :description %><br>
  <%= f.label "Rating" %>
  <%= f.radio_button :rating, '1' %> 1
  <%= f.radio_button :rating, '2' %> 2
  <%= f.radio_button :rating, '3' %> 3
  <%= f.radio_button :rating, '4' %> 4
  <%= f.radio_button :rating, '5' %> 5
  <%= f.submit %>
<% end %>
